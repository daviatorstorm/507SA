@model _507SA.ModelsVM.UserVM
@{
    ViewBag.Title = "ChangeProfile";
}

@Styles.Render("~/css/join")

<div class="row register">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
@using (Html.BeginForm("ChangeProfile", "Home", FormMethod.Post, new { @class = "form joinus", role = "form" }))
{ 
            <h2>Тут ви можете змінити свої дані.</h2>
            <hr>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.Id)
                        @Html.EditorFor(m=>m.FirstName, new { htmlAttributes = new { @type = "text", @name = "first_name", @class = "form-control input-lg", @placeholder = Model.FirstName } })
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @type = "text", @name = "last_name", @class = "form-control input-lg" } })
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @type = "text", @name = "phone", @class = "form-control input-lg" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @type = "email", @id = "email", @class = "form-control input-lg" } })
            </div>
            <div class="form-group">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @type = "password", @id = "password", @class = "form-control input-lg", @placeholder = "Старий пароль" } })
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @type = "password", @id = "new_password", @class = "form-control input-lg" , @placeholder = "Новий пароль" } })
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        @Html.EditorFor(m => m.ConfirmNewPassword, new { htmlAttributes = new { @type = "password", @id = "confirm_new_password", @class = "form-control input-lg", @placeholder="Повторіть пароль" } })
                    </div>
                </div>
            </div>
            <div class="form-group">
               @Html.TextAreaFor(m=>m.Info , new { @class = "form-control", @rows = 3, @cols=4, @placeholder="Інформація" })
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-6 col-md-6"><input type="submit" value="Зберегти" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                <div class="col-xs-6 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Скасувати</a></div>
            </div>
        }
    </div>
</div>
