
@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/css/join")

<div class="row register">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <form class="form joinus" role="form">
            <h2>Будь ласка, введіть дані.</h2>
            <hr>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="first_name" class="form-control input-lg" placeholder="Ім'я" tabindex="1">
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="text" name="last_name" class="form-control input-lg" placeholder="Фамілія" tabindex="2">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="display_name" class="form-control input-lg" placeholder="Телефон" tabindex="3">
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control input-lg" placeholder="E-мейл" tabindex="4">
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="password" name="password" class="form-control input-lg" placeholder="Пароль" tabindex="5">
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <div class="form-group">
                        <input type="password" name="password_confirmation" class="form-control input-lg" placeholder="Підтвердіть пароль" tabindex="6">
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-6 col-md-6"><input type="submit" value="Зареєструватись" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
                <div class="col-xs-6 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg">Увійти</a></div>
            </div>
        </form>
    </div>
</div>

