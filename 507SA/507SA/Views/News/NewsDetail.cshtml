@model _507SA.ModelsVM.NoweltyVM
@{
    ViewBag.Title = "NewsDetail";
}

        <div class="media jumbotron">
@using (Html.BeginForm("NewsDetail", "News", FormMethod.Post, new { role = "form" }))
{
            <div class="media-left">
                <a href="#">
                    <img class="media-object thumbnail" src="~/Content/Images/logo.png" height="60px" alt="">
                </a>
            </div>
            <div class="media-body">
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Date)
                @Html.HiddenFor(m => m.Description)
                @Html.HiddenFor(m => m.Text)
                @Html.HiddenFor(m => m.UserId)
         


                <h2 class="media-heading">@Model.Description</h2>
                <h3>@Model.Text</h3>
                @Model.Date
                    <hr>
               
                
                   @for (int i = 0; i < @Model.Comment.Count; i++)
                    {
                        @Html.HiddenFor(m => m.Comment[i].Id)
                    @Html.HiddenFor(m => m.Comment[i].User)
                        @Html.HiddenFor(m => m.Comment[i].User.LastName)
                        @Html.HiddenFor(m => m.Comment[i].User.FirstName)
                      @Html.HiddenFor(m => m.Comment[i].UserId)
                        @Html.HiddenFor(m => m.Comment[i].NoweltyId)
                        @Html.HiddenFor(m => m.Comment[i].Nowelty)
                        @Html.HiddenFor(m => m.Comment[i].Nowelty)

                        <input type="hidden" name="Comment.Id" />
                        <div class="media comment">
                            <div class="media-body">
                                @Html.HiddenFor(m => m.Comment[i].User.Id)
                                <h5 class="media-heading">@Model.Comment[i].User.LastName  @Model.Comment[i].User.FirstName</h5>
                                <h5 class="media-heading">@Model.Comment[i].DateOfComment</h5>
                                <hr>
                    <p>@Model.Comment[i].Text</p>
                </div>
            </div>  }
                <div class="commenttext">
                    @Html.EditorFor(m => m.CommentText, new { htmlAttributes = new { @class = "form-control", @placeholder = "Коментар" } })
                    <button class="btn btn-default">Відправити</button>
                </div>

                </div>
}
          </div>

